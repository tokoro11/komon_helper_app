<h1>プロフィール編集</h1>

<%= form_with model: @user, url: profile_path, method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div style="border:1px solid #fca5a5; background:#fee2e2; padding:10px; border-radius:10px; margin-bottom:12px;">
      <ul style="margin:0; padding-left:18px;">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "名前" %><br>
    <%= f.text_field :name %>
  </div>

  <div style="margin-top: 12px;">
    <%= f.label :affiliation, "所属（例：〇〇高校）" %><br>
    <%= f.text_field :affiliation, placeholder: "〇〇高校バレー部" %>
  </div>

  <div style="margin-top: 12px;">
    <%= f.label :team_name, "チーム名（例：〇〇高校バレー部）" %><br>
    <%= f.text_field :team_name, placeholder: "例：所バレー" %>
    <div style="font-size: 12px; color: #6b7280; margin-top: 4px;">
      試合予定・募集の作成に必要です
    </div>
  </div>

  <div style="margin-top: 16px;">
    <%= f.submit "保存" %>
  </div>
<% end %>
