<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>
      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 候補一覧（入力は自由） -->
  <datalist id="team_names">
    <% @teams.each do |t| %>
      <option value="<%= t.name %>"></option>
    <% end %>
  </datalist>

  <div>
    <%= form.label :team_a_name, "自チーム" %><br>
    <%= form.text_field :team_a_name, list: "team_names", placeholder: "例：〇〇高校" %>
  </div>

  <div>
    <%= form.label :team_b_name, "対戦相手" %><br>
    <%= form.text_field :team_b_name, list: "team_names", placeholder: "例：△△高校" %>
  </div>

  <div>
    <%= form.label :gym_name, "会場" %><br>
    <%= form.text_field :gym_name, placeholder: "例：第一体育館" %>
  </div>

  <div>
    <%= form.label :starts_at, "開始日時" %><br>
    <%= form.datetime_local_field :starts_at %>
  </div>

  <div>
    <%= form.label :note, "メモ" %><br>
    <%= form.text_area :note %>
  </div>

  <div>
    <%= form.submit(match.persisted? ? "更新する" : "作成する") %>
  </div>
<% end %>
