<p style="color: green"><%= notice %></p>

<%= render @booking %>

<div>
  <%= link_to "Edit this booking", edit_booking_path(@booking) %> |
  <%= link_to "Back to bookings", bookings_path %>

  <%= button_to "Destroy this booking", @booking, method: :delete %>
</div>
<div>
  <%= button_to "承認", approve_booking_path(@booking), method: :patch %>
  <%= button_to "却下", reject_booking_path(@booking), method: :patch %>
  <%= button_to "キャンセル", cancel_booking_path(@booking), method: :patch %>
</div>
