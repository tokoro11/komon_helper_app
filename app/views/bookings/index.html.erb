<p style="color: green"><%= notice %></p>

<h1>体育館予約一覧</h1>

<p><%= link_to "予定を作成", new_booking_path %></p>

<table style="width: 100%; border-collapse: collapse;">
  <thead>
    <tr>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">顧問</th>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">体育館</th>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">開始</th>
      <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">終了</th>
      <th style="border-bottom: 1px solid #ddd; padding: 8px;"></th>
    </tr>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
    <tr>
      <td style="border-bottom: 1px solid #eee; padding: 8px;"><%= booking.user&.name %></td>
      <td style="border-bottom: 1px solid #eee; padding: 8px;"><%= booking.gym&.name %></td>
      <td style="border-bottom: 1px solid #eee; padding: 8px;"><%= booking.start_time&.strftime("%Y-%m-%d %H:%M") %></td>
      <td style="border-bottom: 1px solid #eee; padding: 8px;"><%= booking.end_time&.strftime("%Y-%m-%d %H:%M") %></td>
      <td style="border-bottom: 1px solid #eee; padding: 8px;">
        <%= link_to "詳細", booking_path(booking) %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
