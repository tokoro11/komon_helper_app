<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div style="border:1px solid #fca5a5; background:#fee2e2; padding:10px; border-radius:10px; margin-bottom:12px;">
      <h3 style="margin:0 0 8px; color:#b91c1c;">
        入力内容を確認してください
      </h3>
      <ul style="margin:0; padding-left:18px;">
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- ✅ 顧問（user）は current_user で自動セットするのでフォームから削除 -->

  <div>
    <%= form.label :gym_id, "体育館" %><br>
    <%= form.collection_select :gym_id, Gym.order(:id), :id, :name, prompt: "選択してください" %>
  </div>

  <div style="margin-top: 12px;">
    <%= form.label :start_time, "開始" %><br>
    <%= form.datetime_local_field :start_time %>
  </div>

  <div style="margin-top: 12px;">
    <%= form.label :end_time, "終了" %><br>
    <%= form.datetime_local_field :end_time %>
  </div>

  <!-- ✅ status は作成時 pending 固定、承認/却下は管理者操作なのでフォームから削除 -->
  <% if booking.persisted? && current_user&.admin? %>
    <div style="margin-top: 12px;">
      <%= form.label :status, "ステータス（管理者のみ）" %><br>
      <%= form.select :status, Booking::STATUS_LABELS.map { |k, v| [v, k] } %>
    </div>
  <% end %>

  <div style="margin-top: 12px;">
    <%= form.label :note, "メモ" %><br>
    <%= form.text_area :note %>
  </div>

  <div style="margin-top: 16px;">
    <%= form.submit booking.persisted? ? "更新する" : "作成する" %>
  </div>
<% end %>
