<div id="<%= dom_id booking %>">

  <p>
    <strong>体育館：</strong>
    <%= booking.gym&.name %>
  </p>

  <p>
    <strong>開始時間：</strong>
    <%= booking.start_time&.strftime("%Y-%m-%d %H:%M") %>
  </p>

  <p>
    <strong>終了時間：</strong>
    <%= booking.end_time&.strftime("%Y-%m-%d %H:%M") %>
  </p>

  <p>
    <strong>メモ：</strong>
    <%= booking.note.presence || "なし" %>
  </p>
</div>
