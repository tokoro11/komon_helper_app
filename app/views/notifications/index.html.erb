<h1>通知</h1>

<% if @notifications.any? %>
  <ul class="notifications">
    <% @notifications.each do |n| %>
      <li class="notification <%= 'unread' unless n.read? %>">
        <strong>
          <%= link_to n.title, notification_path(n) %>
          <% unless n.read? %>
            <span class="badge">未読</span>
          <% end %>
        </strong>
        <div><%= n.body %></div>
        <small><%= l(n.created_at) %></small>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>通知はありません</p>
<% end %>
